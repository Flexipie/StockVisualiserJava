<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.stockvisualiser.controller.LoginController"
            stylesheets="@../style/style.css"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #1976d2; -fx-padding: 20;">
            <Text text="Stock Visualiser" style="-fx-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Text text="Portfolio Management System" style="-fx-fill: #bbdefb; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white;">
            
            <!-- Login Tab -->
            <Tab text="Login">
                <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40;">
                    <Text text="Welcome Back" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;"/>
                    <Text text="Login to manage your portfolio" style="-fx-font-size: 14px; -fx-fill: #666;"/>
                    
                    <VBox spacing="15" style="-fx-max-width: 400px;">
                        <VBox spacing="5">
                            <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                            <TextField fx:id="usernameField" promptText="Enter your username"
                                       style="-fx-padding: 10; -fx-font-size: 14px;"/>
                        </VBox>
                        
                        <VBox spacing="5">
                            <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                            <PasswordField fx:id="passwordField" promptText="Enter your password"
                                           style="-fx-padding: 10; -fx-font-size: 14px;"/>
                        </VBox>
                        
                        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;"/>
                        
                        <Button text="Login" onAction="#handleLogin" maxWidth="Infinity"
                                style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 12; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        
                        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Text text="Default Login Credentials:" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-fill: #666;"/>
                            <Text text="Admin: admin / admin123" style="-fx-font-size: 11px; -fx-fill: #999;"/>
                            <Text text="Trader: demo / demo123" style="-fx-font-size: 11px; -fx-fill: #999;"/>
                        </VBox>
                    </VBox>
                </VBox>
            </Tab>
            
            <!-- Registration Tab -->
            <Tab text="Register">
                <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
                    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40;">
                        <Text text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;"/>
                        <Text text="Register to start trading" style="-fx-font-size: 14px; -fx-fill: #666;"/>
                        
                        <VBox spacing="15" style="-fx-max-width: 400px;">
                            <VBox spacing="5">
                                <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <TextField fx:id="regFullNameField" promptText="Enter your full name"
                                           style="-fx-padding: 10; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <TextField fx:id="regEmailField" promptText="Enter your email"
                                           style="-fx-padding: 10; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <TextField fx:id="regUsernameField" promptText="Choose a username (min 3 characters)"
                                           style="-fx-padding: 10; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <PasswordField fx:id="regPasswordField" promptText="Choose a password (min 6 characters)"
                                               style="-fx-padding: 10; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Confirm Password" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <PasswordField fx:id="regConfirmPasswordField" promptText="Confirm your password"
                                               style="-fx-padding: 10; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <VBox spacing="5">
                                <Label text="Account Type" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <ComboBox fx:id="regRoleComboBox" maxWidth="Infinity"
                                          style="-fx-padding: 5; -fx-font-size: 14px;"/>
                            </VBox>
                            
                            <Label fx:id="regErrorLabel" text="" style="-fx-font-size: 12px;" wrapText="true"/>
                            
                            <Button text="Register" onAction="#handleRegister" maxWidth="Infinity"
                                    style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-padding: 12; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #eeeeee; -fx-padding: 15;">
            <Button text="Exit Application" onAction="#handleExit"
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
</BorderPane>
